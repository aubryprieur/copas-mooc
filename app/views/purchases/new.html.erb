<div class="generic-header">
  <h2>Checkout</h2>
  <p class="lead">Your payment information</p>
</div>


<div class="container my-5">
  <% if current_user.card_last4.present? %>
    <%= form_tag purchase_path, action: "create", method: "post", id: "payment-form" do |form| %>
      <%= hidden_field_tag :workshop_id, @workshop.id %>
      <div class="card">
        <div class="card-body mx-auto text-center">
          <p>Your stored credit card will be used to process payment.</p>
          <button class="btn btn-primary" type="submit">Make payment</button>
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- Payment form -->
    <%= form_tag purchase_path, action: "create", method: "post", id: "payment-form" do |form| %>
      <%= hidden_field_tag :workshop_id, @workshop.id %>
      <span class="payment-errors"></span>
      <br>
      <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>


      <div class="row">
        <!-- Order description -->
        <div class="col-md-6">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            Your order
          </h4>
          <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0"><%= @workshop.title %></h6>
                <small class="text-muted">
                  Aliquam at lectus turpis. Sed interdum lorem vel ipsum commodo elementum. Cras ac tortor sem. Sed eu ante elit.
                </small>
              </div>
              <span class="text-muted"></span>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Workshop enrollment</h6>
              </div>
              <span class="text-muted">$<%= number_with_precision(@workshop.cost.to_f, precision: 2).sub(/\.00$/,'') %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Tax</h6>
              </div>
              <span class="text-muted">$0.00</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Total (USD)</span>
              <strong>$<%= number_with_precision(@workshop.cost.to_f, precision: 2).sub(/\.00$/,'') %></strong>
            </li>
          </ul>
        </div>
        <!-- Payment (Stripe) -->
        <div class="col-md-6">
          <h4>Payment</h4>
          <div class="form-row">
            <label for="card-element">
              Credit or debit card
            </label>
            <div id="card-element" class="form-control">
              <!-- a Stripe Element will be inserted here. -->
            </div>
            <!-- Used to display form errors -->
            <div id="card-errors" role="alert"></div>
          </div>
          <br>
          <hr class="mb-4">
          <button class="btn btn-primary btn-lg btn-block" type="submit">Make payment</button>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
