  <div class="container my-2">
   <div class="col-12 col-lg-6 mx-auto">
    <div class="card">
     <div class="card-block" style="padding: 2rem;">
      <div class="intro_profil">
        <% if @user.photo.attached? %>
          <%= image_tag @user.photo, width: 70, height: 70, class: "float-left img_profil" %>
        <% end %>
        <h2>Modifier votre profil</h2>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
            <%= f.input  :first_name, required: true, autofocus: true, autocomplete: "first_name", label: "Prénom" %>
            <%= f.input  :last_name, required: true, autofocus: true, autocomplete: "last_name", label: "Nom" %>
            <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Actuellement en attente de confirmation pour : <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :photo, label: "Photo de profil" %>


          <%= f.input :password,
                      hint: "Laissez le champ vide si vous ne voulez pas le changer",
                      label: "Mot de passe",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirmation du mot de passe",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      label: "Mot de passe actuel",
                      hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos changements",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>
        <br>
        <div class="form-actions">
          <%= f.button :submit, "Mettre à jour", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= link_to "Retour en arrière", :back %>

     </div>
    </div>
   </div>
  </div>
