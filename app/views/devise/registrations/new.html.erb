<div class="container my-2">
  <div class="col-12 col-lg-6 mx-auto">
    <div class="card">
      <div class="card-block" style="padding: 2rem;">
        <h2>S'inscrire</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="field">
            <%= f.label :"Prénom" %><br />
            <%= f.text_field :first_name, class: 'form-control', autofocus: true, autocomplete: "first_name" %>
          </div>
          <div class="field">
            <%= f.label :"Nom" %><br />
            <%= f.text_field :last_name, class: 'form-control', autofocus: true, autocomplete: "last_name" %>
          </div>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :"Mot de passe" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractères minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          </div>
          <div class="field">
            <%= f.label :"Confirmation du mot de passe" %><br />
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>
          <br>
          <div class="actions">
            <%= f.submit "S'inscrire", class: 'btn btn-primary btn-block' %>
          </div>
        <% end %>
        <div class="text-center mx-auto">
          <small>
            <%= render "devise/shared/links" %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
