<div class="row">
  <%= render partial: 'shared/admin_sidebar' %>
  <div class="col-12 col-lg-10">
    <div class="card">
      <div class="card-header">
        Editer l'utilisateur
      </div>
      <%= form_for([:admin,@user]) do |f| %>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>User ID</label>
                 <%= f.text_field :id, :id => "id", :class => "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Nom complet</label>
                <input type="text" class="form-control" value="<%= @user.first_name %> <%= @user.last_name %>" disabled>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Prénom</label>
                   <%= f.text_field :first_name, :id => "first_name", :class => "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Nom</label>
                <%= f.text_field :last_name, :id => "last_name", :class => "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>E-mail</label>
                <%= f.text_field :email, :id => "email", :class => "form-control" %>
              </div>
            </div>
            <div class="col-md-12">
              <hr>
              <div class="form-group">
                <label>Image Info</label>
                <textarea rows="5" class="form-control" value="" disabled><%= @user.photo %></textarea>
              </div>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Créé le</label>
                  <input type="text" class="form-control" value="<%= @user.created_at %>" disabled>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Mis à jour le</label>
                  <input type="text" class="form-control" value="<%= @user.updated_at %>" disabled>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
              <label>Email non confirmé</label>
                <%= f.text_field :unconfirmed_email, :id => "unconfirmed_email", :class => "form-control" %>
              </div>
            </div>
            <div class="col-md-4">
              <hr>
              <div class="form-group">
                <label>Confirmé le</label>
                  <input type="text" class="form-control" value="<%= @user.confirmed_at %>" disabled>
              </div>
            </div>
            <div class="col-md-4">
              <hr>
              <div class="form-group">
                <label>Email de confirmation envoyé le </label>
                  <input type="text" class="form-control" value="<%= @user.confirmation_sent_at %>" disabled>
              </div>
            </div>
            <div class="col-md-4">
              <hr>
              <div class="form-group">
                <label>Confirmation Token</label>
                  <input type="text" class="form-control" value="<%= @user.confirmation_token %>" disabled>
              </div>
            </div>
            <div class="col-md-8">
              <div class="form-group">
                <label>Image Info</label>
                <% if @user.photo.attached?%>
                <%= image_tag @user.photo, style: "width:100%;" %>
                <% end %>
                <textarea rows="5" class="form-control" value="" disabled><%= @user.photo %></textarea>
              </div>
              <div class="form-group">
                <label>Changer la photo?</label>
                <%= f.file_field :photo, class: 'form-control' %>
              </div>
            </div>
          </div>
          <span>
            <%= link_to 'Retour en arrière', admin_users_path, :class => 'btn btn-secondary' %>
          </span>
          <span>
            <%= f.submit 'Mise à jour', :class => 'btn btn-primary' %>
          </span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
