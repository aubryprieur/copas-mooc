<div class="row">
  <%= render partial: 'shared/admin_sidebar' %>
  <div class="col-12 col-lg-10">
    <div class="card">
      <div class="card-header">
        éditer la formation
        <%= link_to admin_workshop_lesson_path(@workshop, @lesson), method: :delete do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
        <% end %>
      </div>
      <%= form_for([:admin,@workshop, @lesson]) do |f| %>
        <div class="card-body">
          <% if @lesson.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@lesson.errors.count, "error") %> a interdit la sauvegarde de cette formation:</h2>
              <ul>
              <% @lesson.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <label>Titre</label>
                  <%= f.text_field :title, class: 'form-control', autofocus: true, autocomplete: "title" %>
              </div>
            </div>
            <div class="col-md-8">
              <div class="form-group">
                <label>Description</label>
                <%= f.rich_text_area :rich_body, rows: '5', autofocus: true, autocomplete: "subtitle" %>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form-group">
                <label>Propriétaire ID</label>
                <input class="form-control" id="disabledInput" type="text" placeholder="<%= @workshop.user_id %>" disabled>
              </div>
            </div>
              <hr>
            <div class="col-md-12">
              <div class="form-group">
                <% if @lesson.video.attached? %>
                  <div>Vidéo Info</div>
                  <span><%= @lesson.video %></span>
                  <br>
                <% end %>
                <br>
                <div>Changer la vidéo?</div>
                <%= f.file_field :video, class: 'form-control' %>
              </div>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-4">
              <div class="form-group">
                <label>Session ID</label>
                <input class="form-control" id="disabledInput" type="text" placeholder="<%= @workshop.id %>" disabled>
              </div>
            </div>
            <div class="col-md-8">
              <div class="form-group">
                <label>Session Titre</label>
                <input class="form-control" id="disabledInput" type="text" placeholder="<%= @workshop.title %>" disabled>
              </div>
            </div>
          </div>
          <hr>
          <span>
            <%= link_to 'Retour à la session', edit_admin_workshop_path(@workshop), :class => 'btn btn-secondary' %>
          </span>
          <span>
            <%= f.submit 'Sauvergarder la leçon', :class => 'btn btn-primary' %>
          </span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
