 <%= image_tag('mooc.png', height: 35, class: 'my-0 mr-md-auto', alt: "COPAS") %>
 <% if admin_signed_in? %>
 <nav class="">
  <a class="p-2 text-dark" href="#">Sidekiq</a>
  <a class="p-2 text-dark" href="#">Users</a>
  <a class="p-2 text-dark" href="#">Workshops</a>
 </nav>
 <% end %>
 <nav class="my-2 my-md-0 mr-md-3">
